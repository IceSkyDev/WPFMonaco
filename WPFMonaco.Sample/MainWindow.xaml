<Window x:Class="WPFMonaco.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMonaco.Sample" xmlns:editor="clr-namespace:WPFMonaco;assembly=WPFMonaco"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="WPF Monaco Test" Height="450" Width="820" MinWidth="820" MinHeight="400" Icon="logo.ico">
    <Window.Resources>
        <Style TargetType="Slider">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="AutoToolTipPlacement" Value="TopLeft"/>
            <Setter Property="TickFrequency" Value="1"/>
            <Setter Property="Width" Value="50"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="300"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.ColumnSpan="3">
            <Button x:Name="btnOpen" Margin="5">Open</Button>
            <Button x:Name="btnSave" Margin="5">Save</Button>
            <Button x:Name="btnOption" Margin="5" Visibility="Collapsed">GetOption</Button>
            <ComboBox x:Name="cbTheme" Margin="5" SelectedIndex="0" Width="70">
                <ComboBoxItem>Light</ComboBoxItem>
                <ComboBoxItem>Dark</ComboBoxItem>
                <ComboBoxItem>HCLight</ComboBoxItem>
                <ComboBoxItem>HCDark</ComboBoxItem>
            </ComboBox>
            <ComboBox x:Name="cbLang" Margin="5" SelectedIndex="0" Width="100">
            </ComboBox>
            <CheckBox x:Name="tbReadOnly" Margin="5">ReadOnly</CheckBox>
            <CheckBox x:Name="tbFold" Margin="5" IsChecked="True">Folding</CheckBox>
            <CheckBox x:Name="tbContext" Margin="5" IsChecked="True">ContextMenu</CheckBox>
            <CheckBox x:Name="tbMiniMap" Margin="5" IsChecked="True">MiniMap</CheckBox>
            <CheckBox x:Name="tbSS" Margin="5" IsChecked="True">StickyScroll</CheckBox>
            <Button x:Name="btnClearLog" Margin="5">ClearLog</Button>
            <Button x:Name="btnTest" Margin="5" Visibility="Collapsed">TestScript</Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock>FontSize:</TextBlock>
            <Slider x:Name="slFs" Minimum="10" Maximum="30" Value="14"></Slider>
            <TextBlock>TabSize:</TextBlock>
            <Slider x:Name="slTs" Minimum="1" Maximum="6" Value="4"></Slider>
            <TextBlock>LineHeight:</TextBlock>
            <Slider x:Name="slLh" Minimum="15" Maximum="40" Value="19"></Slider>

            <CheckBox x:Name="tbWw" Margin="5" IsChecked="True">AutoWrap</CheckBox>
            <CheckBox x:Name="tbLn" Margin="5" IsChecked="True">LineNo.</CheckBox>
            <TextBlock>LineNoWidth:</TextBlock>
            <Slider x:Name="slLnw" Minimum="1" Maximum="10" Value="5" IsEnabled="{Binding ElementName=tbLn,Path=IsChecked}"></Slider>

            <TextBlock>HSV:</TextBlock>
            <ComboBox Name="cbHSV" Margin="5" SelectedIndex="0">
                <ComboBoxItem Content="{x:Static ScrollBarVisibility.Auto}"></ComboBoxItem>
                <ComboBoxItem Content="{x:Static ScrollBarVisibility.Visible}"></ComboBoxItem>
                <ComboBoxItem Content="{x:Static ScrollBarVisibility.Hidden}"></ComboBoxItem>
            </ComboBox>
            <TextBlock>VSV:</TextBlock>
            <ComboBox Name="cbVSV" Margin="5" SelectedIndex="0">
                <ComboBoxItem Content="{x:Static ScrollBarVisibility.Auto}"></ComboBoxItem>
                <ComboBoxItem Content="{x:Static ScrollBarVisibility.Visible}"></ComboBoxItem>
                <ComboBoxItem Content="{x:Static ScrollBarVisibility.Hidden}"></ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center">
            <Button x:Name="btnGetPos" Margin="5">GetPosition</Button>
            <Button x:Name="btnSetPos" Margin="5">SetPosition</Button>
            <Button x:Name="btnGetSel" Margin="5">GetSelection</Button>
            <Button x:Name="btnSetSel" Margin="5">SetSelection</Button>
            <Button x:Name="btnGotoLine" Margin="5">GotoLine</Button>
            <Button x:Name="btnGotoPos" Margin="5">GotoPos</Button>
            <Button x:Name="btnGotoRange" Margin="5">GotoRange</Button>
            <Button x:Name="btnInstText" Margin="5">InsertText</Button>
            <Button x:Name="btnFormat" Margin="5">Format</Button>
            <Button x:Name="btnFocus" Margin="5">Focus</Button>
            <Button x:Name="btnSelAll" Margin="5">SelectAll</Button>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center">
            <Button x:Name="btnIndent" Margin="5">Indent</Button>
            <Button x:Name="btnOutdent" Margin="5">Outdent</Button>
            <Button x:Name="btnClear" Margin="5">Clear</Button>
            <Button x:Name="btnComment" Margin="5">Comment</Button>
            <Button x:Name="btnDupLine" Margin="5">CopyLines</Button>
            <Button x:Name="btnTypeA" Margin="5">TypeChars</Button>
            <Button x:Name="btnDelete" Margin="5">Delete</Button>
            <Button x:Name="btnCursorDown" Margin="5">CursorDown</Button>
            <Button x:Name="btnFold" Margin="5">Fold</Button>
            <Button x:Name="btnUnfold" Margin="5">Unfold</Button>
            <Button x:Name="btnSelLine" Margin="5">SelectLine</Button>
            <Button x:Name="btnOpenFind" Margin="5">OpenFind</Button>
        </StackPanel>
        <editor:MonacoEditor Text="{Binding ElementName=tbBind,Path=Text}" Grid.Row="4" x:Name="tbMonaco" 
                             ReadOnly="{Binding ElementName=tbReadOnly, Path=IsChecked}"
                             Folding="{Binding ElementName=tbFold, Path=IsChecked}"
                             ContextMenuEnable="{Binding ElementName=tbContext, Path=IsChecked}"
                             MinimapEnabled="{Binding ElementName=tbMiniMap, Path=IsChecked}"
                             FontSize="{Binding ElementName=slFs, Path=Value}"
                             TabSize="{Binding ElementName=slTs,Path=Value}"
                             LineHeight="{Binding ElementName=slLh, Path=Value}"
                             LineNumbersChars="{Binding ElementName=slLnw,Path=Value}"
                             ShowLineNumber="{Binding ElementName=tbLn,Path=IsChecked}"
                             WordWrap="{Binding ElementName=tbWw,Path=IsChecked}"
                             ShowStickyScroll="{Binding ElementName=tbSS,Path=IsChecked}"
                             HorizontalScrollBarVisibility="{Binding ElementName=cbHSV,Path=SelectedItem.Content}"
                             VerticalScrollBarVisibility="{Binding ElementName=cbVSV,Path=SelectedItem.Content}"
                             FontFamily="Consolas"
                             Theme="{Binding ElementName=cbTheme,Path=SelectedItem.Content}" 
                             ModelLanguage="{Binding ElementName=cbLang,Path=SelectedItem}"/>
        <GridSplitter Grid.Column="1" Grid.Row="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="AliceBlue"></GridSplitter>
        <Grid Grid.Column="2" Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <GroupBox Header="Log">
                <TextBox x:Name="tbLog" IsReadOnly="True" TextWrapping="Wrap" VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto"></TextBox>
            </GroupBox>
            <GroupBox Grid.Row="1" Header="Text binding test" Margin="0 5 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="tbBind" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"></TextBox>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=tbMonaco,Path=Text}" TextWrapping="Wrap" Visibility="Collapsed"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
